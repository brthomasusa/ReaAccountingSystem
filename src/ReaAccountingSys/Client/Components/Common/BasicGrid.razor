@typeparam TItem

<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>@TableHeader</tr>
    </thead>
    <tbody>
        @foreach (var item in Items!)
        {
            <tr>@RowTemplate!(item)</tr>
        }
    </tbody>
    <tfoot>
        <tr>@TableFooter</tr>
    </tfoot>
</table>
